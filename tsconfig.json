{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*", "jest.config.ts"],
  "exclude": ["node_modules"]
}
